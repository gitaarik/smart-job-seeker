generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email               String        @unique
  password            String
  firstName           String?
  lastName            String?
  isEmailVerified     Boolean       @default(false)
  emailVerifyToken    String?
  passwordResetToken  String?
  passwordResetExpiry DateTime?
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt
  role                Role          @default(USER)
  resumeTokens        ResumeToken[]
  aiResponses         AiResponse[]

  @@map("users")
}

model ResumeToken {
  id          String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  token       String    @unique
  name        String
  description String?
  resumeType  String
  expiresAt   DateTime?
  viewCount   Int       @default(0)
  maxViews    Int?
  isActive    Boolean   @default(true)
  createdBy   String          @db.Uuid
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  creator     User      @relation(fields: [createdBy], references: [id], onDelete: Cascade)

  @@map("resume_tokens")
}

model AiResponse {
  id            String         @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId        String         @db.Uuid
  prompt        String         @db.Text
  context       String?        @db.Text
  originalContent String       @db.Text
  currentContent  String       @db.Text
  llmProvider   String         // "openai" or "gemini"
  llmModel      String         // "gpt-4o-mini", "gemini-1.5-flash", etc.
  sessionId     String?        // To group related requests in a session
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  refinements   AiRefinement[]

  @@map("ai_responses")
}

model AiRefinement {
  id           String     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  responseId   String         @db.Uuid
  request      String     @db.Text
  refinedContent String   @db.Text
  createdAt    DateTime   @default(now())
  response     AiResponse @relation(fields: [responseId], references: [id], onDelete: Cascade)

  @@map("ai_refinements")
}

model WorkExperience {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name        String   // Company name
  location    String
  description String
  position    String
  url         String?
  startDate   String
  endDate     String?
  summary     String   @db.Text
  logo        String?
  sortOrder   Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  highlights   WorkHighlight[]
  technologies WorkTechnology[]
  projects     WorkProject[]

  @@map("work_experiences")
}

model WorkHighlight {
  id               String          @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  workExperienceId String          @db.Uuid
  title            String?
  description      String          @db.Text
  iconName         String?         // Store FontAwesome icon name
  sortOrder        Int             @default(0)
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  workExperience   WorkExperience  @relation(fields: [workExperienceId], references: [id], onDelete: Cascade)

  tags WorkHighlightTag[]

  @@map("work_highlights")
}

model WorkHighlightTag {
  id            String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  highlightId   String         @db.Uuid
  tagName       String
  createdAt     DateTime      @default(now())
  highlight     WorkHighlight @relation(fields: [highlightId], references: [id], onDelete: Cascade)

  @@map("work_highlight_tags")
}

model WorkTechnology {
  id               String         @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  workExperienceId String         @db.Uuid
  technologyName   String
  sortOrder        Int            @default(0)
  createdAt        DateTime       @default(now())
  workExperience   WorkExperience @relation(fields: [workExperienceId], references: [id], onDelete: Cascade)

  @@map("work_technologies")
}

model WorkProject {
  id               String         @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  workExperienceId String         @db.Uuid
  name             String
  startDate        String
  endDate          String
  summary          String         @db.Text
  description      String         @db.Text
  outcome          String         @db.Text
  sortOrder        Int            @default(0)
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  workExperience   WorkExperience @relation(fields: [workExperienceId], references: [id], onDelete: Cascade)

  @@map("work_projects")
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}
