generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String        @id @default(cuid())
  email               String        @unique
  password            String
  firstName           String?
  lastName            String?
  isEmailVerified     Boolean       @default(false)
  emailVerifyToken    String?
  passwordResetToken  String?
  passwordResetExpiry DateTime?
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt
  role                Role          @default(USER)
  resumeTokens        ResumeToken[]
  aiResponses         AiResponse[]

  @@map("users")
}

model ResumeToken {
  id          String    @id @default(cuid())
  token       String    @unique
  name        String
  description String?
  resumeType  String
  expiresAt   DateTime?
  viewCount   Int       @default(0)
  maxViews    Int?
  isActive    Boolean   @default(true)
  createdBy   String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  creator     User      @relation(fields: [createdBy], references: [id], onDelete: Cascade)

  @@map("resume_tokens")
}

model AiResponse {
  id            String         @id @default(cuid())
  userId        String
  prompt        String         @db.Text
  context       String?        @db.Text
  originalContent String       @db.Text
  currentContent  String       @db.Text
  llmProvider   String         // "openai" or "gemini"
  llmModel      String         // "gpt-4o-mini", "gemini-1.5-flash", etc.
  sessionId     String?        // To group related requests in a session
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  refinements   AiRefinement[]

  @@map("ai_responses")
}

model AiRefinement {
  id           String     @id @default(cuid())
  responseId   String
  request      String     @db.Text
  refinedContent String   @db.Text
  createdAt    DateTime   @default(now())
  response     AiResponse @relation(fields: [responseId], references: [id], onDelete: Cascade)

  @@map("ai_refinements")
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}
