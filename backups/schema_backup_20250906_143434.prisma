generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String        @id @default(cuid())
  email               String        @unique
  password            String
  firstName           String?
  lastName            String?
  isEmailVerified     Boolean       @default(false)
  emailVerifyToken    String?
  passwordResetToken  String?
  passwordResetExpiry DateTime?
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt
  role                Role          @default(USER)
  aiResponses         AiResponse[]
  resumeTokens        ResumeToken[]

  @@map("users")
}

model ResumeToken {
  id          String    @id @default(cuid())
  token       String    @unique
  name        String
  description String?
  resumeType  String
  expiresAt   DateTime?
  viewCount   Int       @default(0)
  maxViews    Int?
  isActive    Boolean   @default(true)
  createdBy   String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  creator     User      @relation(fields: [createdBy], references: [id], onDelete: Cascade)

  @@map("resume_tokens")
}

model AiResponse {
  id              String         @id @default(cuid())
  userId          String
  prompt          String
  context         String?
  originalContent String
  currentContent  String
  llmProvider     String
  llmModel        String
  sessionId       String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  refinements     AiRefinement[]
  user            User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("ai_responses")
}

model AiRefinement {
  id             String     @id @default(cuid())
  responseId     String
  request        String
  refinedContent String
  createdAt      DateTime   @default(now())
  response       AiResponse @relation(fields: [responseId], references: [id], onDelete: Cascade)

  @@map("ai_refinements")
}

model WorkExperience {
  name         String
  location     String
  description  String
  position     String
  url          String?
  startDate    String
  endDate      String?
  summary      String
  logo         String?
  sortOrder    Int              @default(0)
  isActive     Boolean          @default(true)
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  id           String           @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  highlights   WorkHighlight[]
  projects     WorkProject[]
  technologies WorkTechnology[]

  @@map("work_experiences")
}

model WorkHighlight {
  id               String             @id @default(cuid())
  workExperienceId String             @db.Uuid
  title            String?
  description      String
  iconName         String?
  sortOrder        Int                @default(0)
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  tags             WorkHighlightTag[]
  workExperience   WorkExperience     @relation(fields: [workExperienceId], references: [id], onDelete: Cascade)

  @@map("work_highlights")
}

model WorkHighlightTag {
  id          String        @id @default(cuid())
  highlightId String
  tagName     String
  createdAt   DateTime      @default(now())
  highlight   WorkHighlight @relation(fields: [highlightId], references: [id], onDelete: Cascade)

  @@map("work_highlight_tags")
}

model WorkTechnology {
  id               String         @id @default(cuid())
  workExperienceId String         @db.Uuid
  technologyName   String
  sortOrder        Int            @default(0)
  createdAt        DateTime       @default(now())
  workExperience   WorkExperience @relation(fields: [workExperienceId], references: [id], onDelete: Cascade)

  @@map("work_technologies")
}

model WorkProject {
  id               String         @id @default(cuid())
  workExperienceId String         @db.Uuid
  name             String
  startDate        String
  endDate          String
  summary          String
  description      String
  outcome          String
  sortOrder        Int            @default(0)
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  workExperience   WorkExperience @relation(fields: [workExperienceId], references: [id], onDelete: Cascade)

  @@map("work_projects")
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}


